<UserControl x:Class="FreedomTaskbar.Controls.TaskbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FreedomTaskbar.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200"
             Name="ThisWindowButton">
  <Button Name="InnerButton" HorizontalContentAlignment="Left">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Image Source="{Binding ElementName=ThisWindowButton, Path=OsWindow.Icon}"
             Grid.Column="0" />
      <TextBlock Text="{Binding ElementName=ThisWindowButton, Path=OsWindow.Title}"
                 Padding="5"
                 FontSize="14"
                 TextTrimming="CharacterEllipsis"
                 Grid.Column="1" />
      <TextBlock Text="Hello World Button! This is very long Text"
                 Padding="5"
                 FontSize="14"
                 TextTrimming="CharacterEllipsis"
                 Grid.Column="1" />
    </Grid>
  </Button>
</UserControl>
